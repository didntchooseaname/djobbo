---
import twemoji from "twemoji"
export type Props = {
    emoji: string
    className?: string
}

const { emoji, className } = Astro.props
---

{
    twemoji && (
        <span
            class={className ?? "inline-block"}
            set:html={twemoji?.parse(emoji)}
        />
    )
}

<style is:global>
    img.emoji {
        height: 0.9em;
        width: 0.9em;
        margin: 0 0.05em 0 0.1em;
        vertical-align: -0.1em;
    }
</style>
