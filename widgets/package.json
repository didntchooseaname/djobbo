{
    "name": "widgets",
    "private": true,
    "version": "0.0.0",
    "main": "dist/main.js",
    "scripts": {
        "widgets:client:dev": "vite --port 3000",
        "widgets:client:build": "tsc && vite build",
        "esbuild-cjs": "esbuild main/index.ts --format=cjs --outfile=./dist/main.js && esbuild main/preload.ts --format=cjs --outfile=./dist/preload.js",
        "widgets:server:dev": "npm run esbuild-cjs && IS_IN_DEVELOPMENT=true electron .",
        "widgets:server:build": "npm run esbuild-cjs && electron-packager --out=release ."
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.4.1"
    },
    "devDependencies": {
        "@types/react": "^18.0.21",
        "@types/react-dom": "^18.0.6",
        "@vitejs/plugin-react": "^2.1.0",
        "autoprefixer": "^10.4.12",
        "electron": "^21.0.1",
        "electron-packager": "^16.0.0",
        "esbuild": "^0.15.10",
        "postcss": "^8.4.17",
        "tailwindcss": "^3.1.8",
        "typescript": "^4.8.4",
        "vite": "^3.1.4"
    }
}
