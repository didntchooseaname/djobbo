---
export type Props = {
    emoji: string
    className?: string
}

const { emoji, className } = Astro.props
---

<span class:list={["emoji", className ?? "inline-block"]} aria-hidden="true"
    >{emoji}</span
>

<style>
    .emoji {
        font-family: "Noto Color Emoji", sans-serif;
        font-size: 0.8em;
    }
</style>
