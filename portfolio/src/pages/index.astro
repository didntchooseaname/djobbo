</Layout>
<TechStackArrow client:only="react" />
<style>
    @keyframes wavehand {
        0% {
            transform: rotate(0deg);
        }
        25% {
            transform: rotate(20deg);
        }
        50% {
            transform: rotate(0deg);
        }
        75% {
            transform: rotate(-20deg);
        }
        100% {
            transform: rotate(0deg);
        }
    }
    .waving-hand:hover {
        animation: wavehand 0.5s ease-out infinite;
        transform-origin: 72% 72%;
    }
</style>
